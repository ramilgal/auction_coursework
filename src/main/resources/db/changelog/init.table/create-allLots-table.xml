<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

<changeSet id="create-allLots-table.xml" author="Ramil Galimov">
    <preConditions>
        <not>
            <tableExists tableName="lots"/>
        </not>
    </preConditions>
    <createTable tableName="lots">
        <column name="id" type="INT" autoIncrement="true">
            <constraints primaryKey="true"/>
        </column>
        <column name="status" type="VARCHAR(7)">
            <constraints nullable="false"/>
        </column>
        <column name="title" type="VARCHAR(64)">
            <constraints nullable="false"/>
        </column>
        <column name="description" type="VARCHAR(4096)">
            <constraints nullable="false"/>
        </column>
        <column name="start_price" type="INT">
        </column>
        <column name="bid_price" type="INT">
        </column>
    </createTable>
</changeSet>
</databaseChangeLog>